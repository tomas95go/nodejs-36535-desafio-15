<div class="card border-primary mb-3">
  <div class="card-header text-center">Centro de mensajes</div>
  <div class="card-body">
    <ul id="chat-messages" class="list-group">
      {{#each messages}}
        {{> message }}
      {{/each}}
    </ul>
    <form id="new-message-form" class="d-flex">
      <input id="new-message-input" class="form-control me-sm-2" type="text" placeholder="Mensaje" autocomplete="off" />
      <button id="new-message-btn" class="btn btn-primary my-2 my-sm-0" type="submit">Enviar</button>
    </form>
  </div>
</div>